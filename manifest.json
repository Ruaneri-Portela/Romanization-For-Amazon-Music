{
  "manifest_version": 2,
  "name": "Romanização Japonesa",
  "version": "1.0",
  "description": "Plugin do Chrome para romanizar letras em japonês.",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking"
  ]
}
